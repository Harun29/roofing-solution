<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:roofing_solution.Controls"
             x:Class="roofing_solution.MainPage">

    <StackLayout Padding="20">
        <!-- Input for the first number -->
        <Entry x:Name="firstNumberEntry" Placeholder="Širina krova" Keyboard="Numeric" />

        <!-- Input for the second number -->
        <Entry x:Name="secondNumberEntry" Placeholder="Visina krova" Keyboard="Numeric" />

        <Button Text="Izračunaj"
                Margin="0,20,0,0"
                Clicked="OnCalculateClicked"/>

        <!-- FlexLayout to display columns -->
        <FlexLayout x:Name="flexLayoutOne" Direction="Row" Wrap="Wrap" JustifyContent="Center" AlignItems="End" Margin="0, 30, 0, 0">
            <!-- Columns will be dynamically added here -->
        </FlexLayout>
        <Label x:Name="firstLoss"></Label>

        <FlexLayout x:Name="flexLayoutTwo" Direction="Row" Wrap="Wrap" JustifyContent="Center" AlignItems="End" Margin="0, 30, 0, 0">
            <!-- Columns will be dynamically added here -->
        </FlexLayout>
        <Label x:Name="secondLoss"></Label>

    </StackLayout>

</ContentPage>
