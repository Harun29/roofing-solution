<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:roofing_solution"
       x:Class="roofing_solution.AppShell"
       Title="roofing_solution"
       Shell.FlyoutBehavior="Disabled"
       Shell.BackgroundColor="White">

    <!-- Customizing Shell Title Area -->
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="0,30,10,10" HorizontalOptions="CenterAndExpand">
            <Image Source="logo.png" HeightRequest="100" WidthRequest="100" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </Shell.TitleView>

    <ShellContent Title="Hare Roofing" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}"/>
</Shell>
